generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  FuelPrice FuelPrice[]
}

model GasStation {
  id        Int         @id @default(autoincrement())
  name      String
  latitude  Float
  longitude Float
  address   String
  createdAt DateTime    @default(now())
  FuelPrice FuelPrice[]
}

model FuelPrice {
  id           Int      @id @default(autoincrement())
  gasStationId Int
  userId       Int
  fuelType     String
  price        Float
  createdAt    DateTime @default(now())

  gasStation GasStation @relation(fields: [gasStationId], references: [id])
  user       User       @relation(fields: [userId], references: [id])
}
